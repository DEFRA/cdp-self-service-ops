{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "module": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["vitest"]
  },
  "include": ["src", ".eslintrc.cjs", "**/*.cjs", "**/*.js", "**/*.json"],
  "exclude": [
    "node_modules",
    "package-lock.json",
    "coverage",
    ".server",
    ".public"
  ]
}
